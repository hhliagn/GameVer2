<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.game.item">
    <class name="com.game.item.Drug">
        <id name="id" column="id" type="java.lang.Long">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" type="java.lang.String"/>
        <property name="consumable" column="consumable" type="int"/>
        <property name="stackable" column="stackable" type="int"/>
        <property name="type" column="type" type="int"/>
    </class>
</hibernate-mapping>